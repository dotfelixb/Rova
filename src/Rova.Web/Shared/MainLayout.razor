@inherits LayoutComponentBase

<PageTitle>Rova.Web</PageTitle>

<div class="box-border font-sans w-full text-sm">
  <div id="header" class="box-border flex xl:px-48 fixed inset-x-0 z-50 border-b border-gray-200  bg-indigo-50 py-3">
    <div class="container flex items-center mx-auto">
      <div class="w-1/2 flex item-center">
        <div class="w-full mr-3">
          <NavLink href="/">
            <span class="font-bold text-gray-600 text-xs uppercase cursor-pointer">
              Home
            </span>
          </NavLink>
        </div>
      </div>
      <div class="w-1/2 flex items-center justify-end">
        @*{/* searchbox */}*@
        <div class="w-3/4 px-5 mx-5">
          <input type="search" placeholder="Search for anything"
                 class="w-full text-sm text-gray-700 outline-none rounded px-3 py-1 border border-gray-300 hover:shadow focus:shadow focus:border-indigo-300 focus:ring-1 focus:ring-indigo-300" />
        </div>

        @*{/* user */}*@
        <div class="w-1/4 flex items-center cursor-pointer text-xs text-gray-700">
          <div class="rounded w-8 text-center p-1 border border-gray-300 mr-1 ">
            DU
          </div>
          <div class="">Demo User</div>
        </div>

        @*{/* notification */}*@
        <div
          class="bg-red-400 w-8 text-xs text-white text-center rounded p-1 border border-red-500 cursor-default hover:bg-red-500">
          8
        </div>
      </div>
    </div>
  </div>

  @Body

</div>


