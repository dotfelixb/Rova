@inherits Microsoft.AspNetCore.Components.Forms.InputSelect<string>

<div class="relative grid space-y-2">
    <label for="@Name" class="text-gray-600 text-xs">
        @if (Label is string)
        {
            @Label
        }
        else
        {
            @Placeholder
        }
    </label>
    <select id="@id" name="@Value"
           @bind="@CurrentValueAsString"
           class="@ClassName">
        @ChildContent
    </select>

</div>

@code {

    [Parameter] public string Label { get; set; }
    [Parameter] public string Name { get; set; }
    [Parameter] public string Placeholder { get; set; } = "";
    [Parameter] public bool Error { get; set; }

    Guid id = Guid.NewGuid();
    private string ClassName = "input-default";

    protected override void OnInitialized()
    {
        if (Error)
        {
            ClassName += " input-error ";
        }
        else
        {
            ClassName += " input-primary ";
        }
    }
}